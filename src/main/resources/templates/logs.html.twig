{% extends 'controlpanelbase.html.twig' %}
{% set title = "Logs" %}
{% set selected = "logs" %}
{% block head_ %}
<link rel="stylesheet" href="/css/logs.css" type="text/css" />
<link rel="stylesheet" href="/font-awesome-4.7.0/css/font-awesome.min.css">
<script src="/script/logs.js"></script>
{% endblock %}
{% block content %}
<div id="logEventHolders" class="logEvent">
  <div class="row headerType">
 	<div class="col-lg-2">
 		<label for="show" class="mr-sm-2">Show</label>
        <select  class="custom-select mb-2 mr-sm-2 mb-sm-0 searchList" id="show">
           <option value="10">Show 10</option>
           <option value="20">Show 20</option>
           <option value="30">Show 30</option>
           <option value="50">Show 50</option>
           <option value="100">Show 100</option>
        </select>
     </div>
     <div class="col-lg-2">
        <label for="sort" class="mr-sm-2">Sort By</label>
        <select  class="custom-select mb-2 mr-sm-2 mb-sm-0 searchList" id="sort">
           <option value="user">username</option>
           <option value="event_date">event_date</option>
           <option value="group">group</option>
           <option value="type">type</option>
           <option value="action">action</option>
        </select>
     </div>
     <div class="col-lg-5">
	    <div class="input-group">
	      <input id="text" type="text" class="form-control searchBox" placeholder="Search for...">
	      <span class="input-group-btn">
	        <button id="search_button" class="btn btn-secondary searchButton" type="button">Go!</button>
	      </span>
	    </div>
	  </div>
	  <div class="col-lg-3">
	  	<nav aria-label="Page navigation example">
		  <ul id="pageList" class="pagination">
		    <li id="page-next-button" class="page-item">
		      <a class="page-link" href="#" aria-label="Previous">
		        <span aria-hidden="true">&laquo;</span>
		        <span class="sr-only">Previous</span>
		      </a>
		    </li>
		    <li id="page-back-button" class="page-item">
		      <a class="page-link" href="#" aria-label="Next">
		        <span aria-hidden="true">&raquo;</span>
		        <span class="sr-only">Next</span>
		      </a>
		    </li>
		    <li class="page-item">
		    	<i id="throbbing-icon" class="fa fa-refresh fa-spin throbbing" style="font-size:24px; display: none;"></i>
		    </li>
		  </ul>
		</nav>
	  </div>
  </div>
  <table id="logEventTable">
  	<tr>
  		<th>User</th>
  		<th>Date</th>
  		<th>Time</th>
  		<th>Action Group</th>
  		<th>Action Type</th>
  		<th>Action</th>
  	</tr>
  </table>
</div>
{% endblock %}